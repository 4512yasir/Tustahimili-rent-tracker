generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  plots     Plot[] // user owns many plots
  rents     Rent[] // user (agent) can record many rents
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Plot {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  location   String
  size       String?
  rentAmount Float
  ownerId    String
  owner      User     @relation(fields: [ownerId], references: [id])
  createdAt  DateTime @default(now())

  rents    Rent[]
  repairs  Repair[]
  expenses Expense[]
}

model Rent {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  tenant    String
  amount    Float
  dueDate   DateTime
  paid      Boolean   @default(false)
  paidAt    DateTime?
  plotId    String
  plot      Plot?     @relation(fields: [plotId], references: [id])
  agentId   String
  agent     User?     @relation(fields: [agentId], references: [id]) // âœ… Add this line
  createdAt DateTime  @default(now())

  @@index([plotId])
}

model Repair {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  plotId      String
  plot        Plot?    @relation(fields: [plotId], references: [id])
  description String
  cost        Float
  status      String   @default("pending")
  createdAt   DateTime @default(now())

  @@index([plotId])
}

model Expense {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  plotId      String
  plot        Plot?    @relation(fields: [plotId], references: [id])
  description String
  amount      Float
  date        DateTime @default(now())

  @@index([plotId])
}
